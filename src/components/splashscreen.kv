MDScreen:
    name: "splashscreen"

    MDFloatLayout:
        md_bg_color: (2/255,70/255,80/255,255)  #rgba(2, 70, 80, 1)

        MDFloatLayout:
            size_hint: .5, .5
            pos_hint: {"center_x": .65, "center_y": .5}

	        MDLabel:
	        	text: "Tours"
	        	font_name: 'Poppins'
	        	font_size: "32sp"
                theme_text_color: "Custom"
	        	color: (210/255, 210/255, 210/255, 255/255)
	        	pos_hint: {"center_x": .45, "center_y": .5}

        MDFloatLayout:
            size_hint: .5, .5
            pos_hint: {"center_x": .5, "center_y": .6}

            Image:
                source: 'assets/logo.png'
                pos_hint: {"center_x": .5, "center_y": .5}

        MDIconButton:
            icon: "arrow-right"
            pos_hint: {'center_x': .9, 'center_y': .05}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current="startscreen"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)