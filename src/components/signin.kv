MDScreen:
    name: "signin"

    MDFloatLayout:
        md_bg_color: (226/255, 226/255, 226/255, 255)   # rgba(226, 226, 226, 1)

        MDFloatLayout:
            size_hint_y: .5
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .8}

            Image:
                size_hint: .3, .3
                source: 'assets/form_logo.png'
                pos_hint: {"center_x": .18, "center_y": .7}

            MDLabel:
                text: "Welcome back!"
                font_name: 'Poppins'
                font_size: "28sp"
                theme_text_color: "Custom"
                color: (2/255, 70/255, 80/255, 200/255)
                pos_hint: {"center_x": .55, "center_y": .5}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_y': .05}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            # text_color: (2/255,70/255,80/255,255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current="startscreen"
            canvas.before:
                Color:
                    rgb: rgba(2, 70, 80, 1)


        MDFloatLayout:
            # md_bg_color: 1,1,1,1
            size_hint: .9, .062
            pos_hint: {"center_x": .5, "center_y": .55}

            MDTextField:
                id: username
                line_color_normal: rgba(0, 212, 126, 1)
                spacing: "20dp"
                adaptive_height: True
                hint_text: "username"
                text_color_normal: "gray"
                text_color_normal_focus: "white"
                mode: "fill"
                radius: [4]
                background_color: 1,1,1,1
                theme_text_color: "custom"
                hint_text_color: "white"
                pos_hint: {"center_x": .5, "center_y": .65}
                text_color_focus: '#024650'
                text_color_normal: '#024650'
                helper_text_color_normal: '#024650'
                helper_text_color_focus: '#024650'
                hint_text_color_normal: '#024650'
                hint_text_color_focus: '#024650'
                line_anim: True
                required: True
                reqired_color: '#024650'


        MDFloatLayout:
            size_hint: .9, .062
            pos_hint: {"center_x": .5, "center_y": .45}

            MDTextField:
                id: password
                line_color_normal: "white"
                mode: "fill"
                radius: [4]
                spacing: "10dp"
                background_color: 1,1,1,1
                pos_hint: {"center_x": .5, "center_y": .65}
                icon_right: "eye-crossed"
                hint_text: "password"
                adaptive_height: True
                text_color_focus: '#024650'
                text_color_normal: '#024650'
                helper_text_color_normal: '#024650'
                helper_text_color_focus: '#024650'
                hint_text_color_normal: '#024650'
                hint_text_color_focus: '#024650'
                line_anim: True
                password: True
                required: True
                reqired_color: '#024650'

        # """ 
        #     [TODO] -> Create a call back function to capture the data entered on the text field by user,
        #                 the caputed will be used for user validation
        # """
        Button:
            text: "sign in"
            background_color: 0,0,0,0
            font_name: "Roboto"
            font_size: "14sp"
            theme_text_color: "custom"
            color: ('#00D47E')
            size_hint: (.5, .065)
            pos_hint: {'center_x': .5, 'center_y': .3}
            elevation: 4.5
            # redirect
            on_release:
                if app.user_signin(username.text, password.text) == True: root.manager.current="homepage", 
                if app.user_signin(username.text, password.text) == False: root.manager.current="interests"
            canvas.before:
                Color: 
                    rgb: rgba(2, 70, 80, 1)
                
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [5]